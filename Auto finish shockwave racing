-- Use at your own risk
local player = game:GetService("Players").LocalPlayer
local part = workspace:WaitForChild("Finish"):WaitForChild("Finish")

local function startTouchSpam(character)
    local hum = character:WaitForChild("HumanoidRootPart")
    if not hum then return end
    task.spawn(function()
        while hum.Parent do
            firetouchinterest(hum, part, 0)
            firetouchinterest(hum, part, 1)
            task.wait(0.01)
        end
    end)
end

local function setupGamemodeCheck()
    local success, label = pcall(function()
        return player:WaitForChild("PlayerGui"):WaitForChild("Main")
            :WaitForChild("Primary"):WaitForChild("HUD")
            :WaitForChild("SubFrame"):WaitForChild("GamemodeLabel")
    end)

    if success and label then
        local function check()
            if label.Text == "Winning Streak" then
                player:Kick("Gamemode is Winning Streak. We have kicked you because we have found out this gamemode can ban you if you get too many wins. If you wish to continue playing next time, you can use Infinite Yield AntiKick. Alternatively, you can use RemoteSpy and spam the fire remote for the gamemode you voted for.")
            end
        end
        check()
        label:GetPropertyChangedSignal("Text"):Connect(check)
    end
end

if player.Character then
    startTouchSpam(player.Character)
end

player.CharacterAdded:Connect(startTouchSpam)
setupGamemodeCheck()
